root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
# editorconfig-tools is unable to ignore longs strings or urls
#max_line_length = null
max_line_length = 80 # to fix prettier error - https://github.com/prettier/prettier/issues/3880
